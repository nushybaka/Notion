	<script>

		let direction = "vertical";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://www.notion.so/nushybaka/HOME-3db98aa530e547039d4c0df02e4a3338?pvs=4", '_blank').focus();
			else if (id == "Sandbox")
				window.open("https://www.notion.so/nushybaka/Sandbox-0054248480154d808f95835969fc7924?pvs=4", '_blank').focus();
			else if (id == "Work")
				window.open("https://www.notion.so/nushybaka/Work-221a2aaba2c44a2ea99d25eaf52d6be2?pvs=4", '_blank').focus();

			else if (id == "My-People")
				window.open("https://www.notion.so/nushybaka/My-People-0a302862040040d1ad83ff24600ba294?pvs=4", '_blank').focus();


			else if (id == "Courses")
				window.open("https://www.notion.so/nushybaka/Learning-Dashboard-db2a815a901b4e6ea0ca81b418c586ae?pvs=4", '_blank').focus();

			else if (id == "Assignment")
			window.open("https://www.notion.so/nushybaka/Assignments-4d042b852f114a2ab983065553e83c66?pvs=4", '_blank').focus();
			else if (id == "Media")
			window.open("https://www.notion.so/nushybaka/Media-904823f6341048de886681f48fd42bdb?pvs=4", '_blank').focus();

			else if (id == "Braindump")
				window.open("https://www.notion.so/nushybaka/Braindump-bd437397f99a454cb38f7c654ea85c6a?pvs=4", '_blank').focus();
			
		}
	</script>


