	<nav class="navMenu  border">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i> Home</a>
		<a id="Sandbox" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-lightbulb"></i> Sandbox</a>
		<a id="Work" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-laptop-file"></i> Work</a>
		<a id="My-People" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-laptop-file"></i> My People</a>
